<%- include('../layouts/header', {title: 'Nova tarefa'}) %>

<%- include('../layouts/menu') %>

<section class="section">
    <div class="container">
      <h1 class="title size-4">Nova tarefa</h1>

      <form method="post" action="/checklists/<%= checklistId %>/tasks">
        <div class="field">
          <label class="label">Nome</label>
          <div class="control">
            <input class="input" type="text" name="task[name]" placeholder="Tarefa" value="<%= task.name %>">
            <% if(task.error && task.errors.hasOwnProperty('name')) { %>
                <p class="is-danger help"><%= task.error.name.message %>></p>
            <% } %>  
        </div>
        </div>

        <a href="/checklists/<%= checklistId %>" class="button is-dark"><i class="fa fa fa-window-close"></i>&nbsp; Cancelar</a>
        <button type="submit" class="button is-success"><i class="fa fa-check"></i>&nbsp; Salvar</button>
      </form>
    </div>
</section>

<%- include('../layouts/footer') %>
